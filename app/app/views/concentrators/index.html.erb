<p id="notice"><%= notice %></p>

<h1>Concentrators</h1>

<table>
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Address</th>
      <th>Login</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concentrators.each do |concentrator| %>
      <tr>
        <td><%= concentrator.hostname %></td>
        <td><%= concentrator.address %></td>
        <td><%= concentrator.login %></td>
        <td><%= concentrator.password %></td>
        <td><%= link_to 'Show', concentrator %></td>
        <td><%= link_to 'Edit', edit_concentrator_path(concentrator) %></td>
        <td><%= link_to 'Destroy', concentrator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

